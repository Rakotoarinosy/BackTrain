// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id                          Int                       @id @default(autoincrement())
  nom                         String
  email                       String
  password                    String
  phone                       String
  CIN                         String                          
  statu_user_role             Statu_user_role[]
  user_image                  UserImage[]
  qrImageUser                 QrImageUser[]
  ReservationValidate         ReservationValidate[]
}


model Role {
  id                          Int                       @id @default(autoincrement())
  nom                         String
  statu_user_role             Statu_user_role[]
}

model Statu {
  id                          Int                       @id @default(autoincrement())
  libelle                     String
  role                        Statu_user_role[]
  train                       Train[]
}

model Statu_user_role {
  id                          Int                       @id @default(autoincrement())
  userId                      Int
  roleId                      Int                 
  statuId                     Int                 
  date                        DateTime                  @default(now())
  Role                        Role                      @relation(fields: [roleId], references: [id])
  Statu                       Statu                     @relation(fields: [statuId], references: [id])
  user                        User                      @relation(fields: [userId], references: [id])
}


model Image {
  id                          Int                       @id @default(autoincrement())
  nom                         String
  user_image                  UserImage[]
  qrImageUser                 QrImageUser[]

}

model UserImage {
  id                          Int                       @id @default(autoincrement())
  userId                      Int
  imageId                     Int
  date                        DateTime                  @default(now())
  image                       Image                     @relation(fields: [imageId], references: [id])
  user                        User                      @relation(fields: [userId], references: [id])
}

model Train {
  id                          Int                       @id @default(autoincrement())
  nom                         String
  matricule                   String
  idStatu                     Int
  statu                       Statu                     @relation(fields: [idStatu], references: [id])
  reservationValidate         ReservationValidate[]
  trainGare                   TrainGare[]
  trainReservation            TrainReservation[]
}

model Gare{
  id                          Int                       @id @default(autoincrement())
  nom                         String
  trainGare                   TrainGare[]
}

model Reservation {
  id                          Int                       @id @default(autoincrement())
  start                       Int            
  end                         Int
  numP                        Int
  date                        DateTime
  hour                        DateTime
  reservationValidate         ReservationValidate[]
  reservationTraveler         ReservationTraveler[]
  trainReservation            TrainReservation[]
}

model QRcode {
  id                          Int                       @id @default(autoincrement())
  qrImageUser                 QrImageUser[]
}

model QrImageUser {
  id                          Int                       @id @default(autoincrement())
  qrId                        Int
  imageId                     Int
  userId                      Int
  image                       Image                     @relation(fields: [imageId], references: [id])
  user                        User                      @relation(fields: [userId], references: [id])
  qrcode                      QRcode                    @relation(fields: [qrId], references: [id])
}

model ReservationValidate{
  id                          Int                       @id @default(autoincrement())
  userId                      Int          
  reservationId               Int
  trainId                     Int
  user                        User                      @relation(fields: [userId], references: [id])
  reservation                 Reservation               @relation(fields: [reservationId], references: [id])
  train                       Train                     @relation(fields: [trainId], references: [id])

}


model TrainGare {
  id                          Int                       @id @default(autoincrement())
  trainId                     Int
  gareId                      Int
  date                        DateTime
  train                       Train                     @relation(fields: [trainId],references: [id])
  gare                        Gare                      @relation(fields: [gareId], references: [id])
}

model Traveler {
  id                          Int                       @id @default(autoincrement())
  nom                         String
  cin                         String
  reservationTraveler         ReservationTraveler[]
}

model ReservationTraveler {
  id                          Int                       @id @default(autoincrement())
  reservationId               Int
  travelerId                  Int
  reservation                 Reservation               @relation(fields: [reservationId], references: [id])
  traveler                    Traveler                  @relation(fields: [travelerId], references: [id])

}


model TrainReservation {
  id                          Int                       @id @default(autoincrement())
  reservationId               Int
  trainId                     Int
  reservation                 Reservation               @relation(fields: [reservationId], references: [id])
  train                       Train                 @relation(fields: [trainId], references: [id])

}
